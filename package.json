{
  "name": "react-mc-launcher",
  "productName": "React MCLauncher",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "dd_06"
  },
  "description": "D",
  "homepage": "./",
  "dependencies": {
    "@material-ui/core": "^4.12.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.1",
    "electron-is-dev": "^2.0.0",
    "electron-localshortcut": "^3.2.1",
    "fs-extra": "^9.1.0",
    "i18next": "^20.2.2",
    "minecraft-server-ping": "^0.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.15",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "request": "^2.88.2",
    "sweetalert2": "^11.0.20",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "electron": "wait-on tcp:3000 && electron .",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"SET BROWSER=none&&npm run react-start\" npm:electron"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "fr.dd06.reactmclauncher",
    "productName": "React MCLauncher",
    "artifactName": "${productName}.${ext}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./main.js",
      "public/",
      "./preload.js"
    ],
    "directories": {
      "buildResources": "public/assets"
    },
    "asar": true,
    "extends": null,
    "win": {
      "target": "portable",
      "icon": "public/assets/images/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games",
      "icon": "public/assets/images/icon.icns",
      "type": "distribution"
    },
    "linux": {
      "target": "AppImage",
      "maintainer": "dd_06",
      "vendor": "ReactMCLauncher",
      "synopsis": "React Minecraft launcher",
      "description": "React Minecraft launcher",
      "category": "Game"
    },
    "deb": {
      "compression": "xz",
      "packageCategory": "Games",
      "priority": "optional"
    },
    "compression": "maximum"
  }
}
